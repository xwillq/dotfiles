let g:mapleader=" "
let g:maplocalleader=" "


"-------------------------------------------------------------------------------
" UI
"-------------------------------------------------------------------------------

" Show relative line numbers
set number
set relativenumber


"-------------------------------------------------------------------------------
" Search
"-------------------------------------------------------------------------------

" Do incremental search
set incsearch

" Highlight search results
set hlsearch

" Perform case insensitive search by default
set ignorecase
" Perform case sensitive search when pattern contains uppercase letters
set smartcase


"-------------------------------------------------------------------------------
" UX
"-------------------------------------------------------------------------------

" Show 5 lines of context around cursor
set scrolloff=5
" Show 10 columns of context around cursor
set sidescrolloff=10
